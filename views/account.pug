extends base
//- Jei active klase = true, tai prideti sita klase, jei ne, nieko neprideti 
mixin navItem(link, text, active)
  li(class=`${active ? 'side-nav--active' : ''}`)
    a(href=`${link}`)
      | #{ text }

block content
  main.main
    .container
    .row.my-row-account
      .col-md-4.border-offset-md-1.my-col.fixOverflowAccount
        .user-view
          nav.user-view__menu
            ul.side-nav
              - if (user.role === 'admin siūlau darba')
                +navItem('/darbdavioInfo', 'Darbdavio informacija')

            - if (user.role === 'admin')
              .admin-nav
                h5.admin-nav_heading Admin
                ul.side-nav
                  +navItem('#', 'Users')
                  +navItem('#', 'Trinti skelbima')
                  +navItem('#', 'Trinti useri')

            - if (user.role === 'siūlau darba')
              .darbdavio-nav
                h5.darbdavio-nav_heading Darbdavio Nustatymai
                ul.side-nav
                  +navItem('/sukurtiSkelbima', 'Sukurti skelbima')
                  +navItem('/manoSkelbimai', 'Mano skelbimai')
                  +navItem('/darbdavioInfo', 'Informacija apie įmone')
      .col-md-8.border-offset-md-1.my-col.fixOverflowAccount
        | 
        .user-view__content
        .user-view__form-container
          h2.heading-secondary.ma-bt-md Jūsų paskyros nustatymai
          // without api
          //- form.form.form-user-data(action='/submit-user-data', method='POST')
          form.form.form-user-data
            .form__group
              label.form__label(for='name') Vardas
              .sec-2
                input#name.form__input(
                  type='text',
                  value=`${user.name}`,
                  required,
                  name='name'
                )
            .form__group.ma-bt-md
              label.form__label(for='email') Email
              .sec-2 
                input#email.form__input(
                  type='email',
                  value=`${user.email}`,
                  required,
                  name='email'
                )
           
            .form__group.right
              button.account-btn.btn.btn-secondary Išsaugoti

        .line &nbsp;
          h2.heading-secondary.ma-bt-md Keisti slaptažodį
          form.form.form-user-settings
            .form__group
              label.form__label(for='password-current') Dabartinis slaptažodis
              .sec-2
                input#password-current.form__input(
                  type='password',
                  placeholder='••••••••',
                  required,
                  minlength='8'
                )
            .form__group
              label.form__label(for='password') Naujas slaptažodis
              .sec-2
                input#password.form__input(
                  type='password',
                  placeholder='••••••••',
                  required,
                  minlength='8'
                )
            .form__group
              label.form__label(for='password-confirm') Pakartoti nauja slaptažodi
              .sec-2
                input#password-confirm.form__input(
                  type='password',
                  placeholder='••••••••',
                  required,
                  minlength='8'
                )

            
              button.account-btn.btn.btn-secondary Išsaugoti
     
