block content 
  each skelbimas in gautiDarbdavi.skelbimai
    .container.my-container
        a.eiti-i-skelbima(href=`/skelbimas/${skelbimas.id}`)
          .row.my-row
            .col-md-6.border-offset-md-1.my-col.fixOverflow.pareiguPavadinimas= skelbimas.pareiguPavadinimas
              .col-md-8.my-col.fixOverflow.skelbimoImone= skelbimas.imone

            .col-md-2.my-col.fixOverflow.skelbimoAtlyginimas= `${skelbimas.atlyginimas} €`

              -if(skelbimas.atlyginimoTipas === 'bruto')
                //- style(type='text/css').
