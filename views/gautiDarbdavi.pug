                //-     }
                .skelbimoAtlyginimoTipas Neatskaičius mokesčių

              -if(skelbimas.atlyginimoTipas === 'neto')
                //- style(type='text/css').
                //-   .skelbimoAtlyginimas{
                //-   color: #66FF99;

                //-     }
                .skelbimoAtlyginimoTipas Atskaičius mokesčius

              .col-md-2.my-col.fixOverflow.skelbimoAtlyginimoTipas

            .col-md-2.my-col.fixOverflow.skelbimoMiestas= skelbimas.miestas

            .col-md-2.my-col.fixOverflow.skelbimasSukurtas= skelbimas.createdAt

